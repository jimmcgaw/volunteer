<h1>Your Events</h1>

<% render :partial => "event", :collection => @events, :as => :event %>
<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Summary</th>
    <th>Additional</th>
    <th>Show organization</th>
    <th>Show coordinators</th>
    <th>Organization</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.start_date %></td>
    <td><%= event.end_date %></td>
    <td><%= event.summary %></td>
    <td><%= event.additional %></td>
    <td><%= event.show_organization %></td>
    <td><%= event.show_coordinators %></td>
    <td><%= event.organization_id %></td>
    <td><%= event.location_id %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

