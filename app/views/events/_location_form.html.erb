  <%= fields_for @location do |location| %>
  <div class="field">
    <%= location.label :name %> <%= location.text_field :name, :placeholder => "unique name for location" %>
  </div>
  <div class="field">
    <%= location.label :address1 %> <%= location.text_field :address1, :placeholder => "address 1" %>
  </div>
  <div class="field">
    <%= location.label :address2 %> <%= location.text_field :address2, :placeholder => "address 2" %>
  </div>
  <div class="field">
    <%= location.label :city %> <%= location.text_field :city, :placeholder => "city" %>
  </div>
  <div class="field">
    <%= location.label :state %> <%= location.text_field :state, :placeholder => "state" %>
  </div>
  <div class="field">
    <%= location.label :postal_code %> <%= location.text_field :postal_code, :placeholder => "postal code (required)" %>
  </div>
  <div class="field">
    <%= location.label :phone_number %> <%= location.text_field :phone_number, :placeholder => "phone number" %>
  </div>

  <% end %>