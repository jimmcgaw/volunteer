<div class="location" style="padding:15px;border:solid 1px #999;border-radius:10px;margin-bottom:15px;">
	<div class="actions" style="float:right;">
	    <%= link_to 'Edit', edit_location_path(location) %><br />
	    <%= link_to 'Delete', location, :confirm => 'Are you sure?', :method => :delete %>
	</div>
	<%= link_to location.name, location, :style => "font-weight:bold;" %><br />
	
	<%= location.street_address %><br />
	<%= location.city %>, <%= location.state %> <%= location.postal_code %>
</div>
