<h1>Volunteer Event Handler</h1>
<p>Need volunteers for an event? Create a page for your event and let volunteers to sign up!</p>
<% if signed_in? %>
	<p><%= link_to "Manage My Events", events_path, :class => "button" %></p>
<% else %>
	<p><%= link_to "Get Started Now", authentications_path, :class => "button" %></p>
<% end %>

<% content_for :sidebar do %>
    <h2>New Events</h2>
	<% for event in @events %>
		<%= link_to event.name, event %><br />
	<% end %>
	<br />
	<h2>New Organzations</h2>
	<% for organization in @organizations %>
		<%= link_to organization.name, organization %><br />
	<% end %>
<% end %>

<% content_for :more_scripts do %>
	<%= javascript_include_tag "pages/home" %>
<% end %>
