<h1>Listing shifts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Start</th>
    <th>End</th>
    <th>Event</th>
    <th>Volunteer count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.title %></td>
    <td><%= shift.description %></td>
    <td><%= shift.start %></td>
    <td><%= shift.end %></td>
    <td><%= shift.event_id %></td>
    <td><%= shift.volunteer_count %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

